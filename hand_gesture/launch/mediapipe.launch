<?xml version="1.0"?>
<launch>
    <arg name="seadrone" default="true"/>
    <arg name="veh" default="seadrone"/>

    <group ns="$(arg veh)">
        <group if="$(arg seadrone)">
            <!--seadrone detect-->
            <node name="mediapipe_seadrone_node" pkg="hand_gesture" type="cam_hand.py" output="screen"/>
        </group>

        <group unless="$(arg seadrone)">
            <!--D435 detect-->
            <node name="mediapipe_d435_node" pkg="hand_gesture" type="d435_hand.py" output="screen"/>
        </group>
    </group>
</launch>